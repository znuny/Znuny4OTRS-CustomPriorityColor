<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="Frontend::Output::FilterElementPost###OutputFilterPostZnuny4OTRSCustomPriorityColor" Required="0" Valid="1">
        <Description Translatable="1">This configuration registers an OutputFilter module that adds CSS for ticket priorities.</Description>
        <Group>Znuny4OTRS-CustomPriorityColor</Group>
        <SubGroup>Core::Web</SubGroup>
            <Setting>
                <Hash>
                    <Item Key="Module">Kernel::Output::HTML::OutputFilterPostZnuny4OTRSCustomPriorityColor</Item>
                    <Item Key="Templates">
                        <Hash>
                            <Item Key="Header">1</Item>
                        </Hash>
                    </Item>
                </Hash>
            </Setting>
    </ConfigItem>
    <ConfigItem Name="CustomPriorityColor::PriorityColor" Required="0" Valid="1">
        <Description Translatable="1">Mapping of ticket priority name to background color.</Description>
        <Group>Znuny4OTRS-CustomPriorityColor</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Hash>
                <Item Key="1 very low">aabbff</Item>
                <Item Key="2 low">aaddff</Item>
                <Item Key="3 normal">cdcdcd</Item>
                <Item Key="4 high">ffcccc</Item>
                <Item Key="5 very high">ffaaaa</Item>
            </Hash>
        </Setting>
    </ConfigItem>
</otrs_config>
